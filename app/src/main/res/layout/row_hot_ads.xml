<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_135sdp"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_20sdp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewHotAdItemImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/rounded_hot_ad_item"
            android:backgroundTint="#E0F2F1"
            android:src="@drawable/ad_item" />

        <TextView
            android:id="@+id/tvHotAdIteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:ellipsize="end"
            android:fontFamily="@font/cairo"
            android:gravity="center"
            android:hint="Item name"
            android:maxLines="1"
            android:paddingStart="@dimen/_3sdp"
            android:textColor="@color/colorD4"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHotAdItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:ellipsize="end"
                android:fontFamily="@font/cairo"
                android:gravity="center"
                android:hint="Price"
                android:maxLines="2"
                android:padding="@dimen/_3sdp"
                android:textColor="#00BCD4"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                tools:ignore="SmallSp"

                />

            <TextView
                android:id="@+id/tvHotAdItemMarketName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_toStartOf="@id/tvHotAdItemPrice"
                android:ellipsize="end"
                android:fontFamily="@font/cairo"
                android:gravity="center"
                android:hint="Market Name"
                android:maxLines="2"
                android:padding="@dimen/_3sdp"

                android:textColor="#4CAF50"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold"
                tools:ignore="SmallSp"

                />
        </RelativeLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>